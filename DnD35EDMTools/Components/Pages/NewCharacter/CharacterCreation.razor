    private void CalculatedBaseFortitude()
    {
        if (SelectedClassId <= 1) return;
        var fortitudePerLevel = _classes.Single(c => c.Id == SelectedClassId).FortitudeSavePerLevel;
        var baseFortitude = 0.0m;
        if (fortitudePerLevel == 0.5m)
        {
            baseFortitude = 2.0m;
        }

        var constitutionModifier = ConversionHelper.ConvertStatToBonus(CharacterConstitution);
        baseFortitude += fortitudePerLevel + constitutionModifier;

        _calculatedBaseFortitude = Math.Floor(baseFortitude);
    }

