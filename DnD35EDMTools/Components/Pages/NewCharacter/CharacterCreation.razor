        }
    }

    private void SetSecondaryStatValue(int number, int tempStat)
    {
        foreach (var statField in _statFields)
        {
            if (GetStatValue(statField.Key) == number)
            {
                statField.Value(tempStat);
                break;
            }
        }
    }

